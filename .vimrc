set nocompatible

set statusline=%<\ %n:%f\ %m%r%y%=%-35.(line:\ %l\ of\ %L,\ col:\ %c%V\ (%P)%)

syntax on
set number
set encoding=utf-8
set showcmd
set background=light

set showmatch
set ignorecase
set autoindent
set history=1000
set shiftwidth=2 tabstop=2
set softtabstop=2

set ignorecase
set smartcase
set hlsearch

set cindent

set fdm=indent

hi Search ctermfg=LightGreen ctermbg=NONE
