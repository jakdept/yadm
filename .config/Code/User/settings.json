// Place your settings in this file to overwrite the default settings
{
    "editor.formatOnSave": true,
    "go.formatTool": "goreturns",
    "go.buildOnSave": "package",
    // Run Lint tool on save.
    "go.lintOnSave": "package",
    // Specifies Lint tool name.
    "go.lintTool": "golangci-lint",
    // https://github.com/alecthomas/gometalinter#supported-linters
    "go.lintFlags": [
        "--disable-all",
        "--enable=deadcode",
        "--enable=errcheck",
        "--enable=gosimple",
        "--enable=govet",
        "--enable=golint",
        "--enable=ineffassign",
        "--enable=staticcheck",
        "--enable=structcheck",
        "--enable=typecheck",
        "--enable=unused",
        "--enable=varcheck",
        "--enable=interfacer",
        "--enable=gosec",
        "--enable=dupl",
        "--enable=goconst",
        "--enable=goimports",
        "--enable=misspell",
        "--enable=unparam",
        "--enable=lll",
        "--line-length=80",
    ],
    "go.vetOnSave": "package",
    "go.coverOnSave": true,
    "go.toolsEnvVars": {
        "CGO_ENABLED": 1
    },
    "editor.rulers": [
        80
    ],
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 160,
    "workbench.activityBar.visible": true,
    "editor.wrappingIndent": "indent",
    "editor.fontFamily": "Hack, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "terminal.integrated.fontFamily": "Hack, Menlo, Monaco, Consolas, \"Droid Sans Mono\", \"Courier New\", monospace, \"Droid Sans Fallback\"",
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "window.zoomLevel": 0,
    "search.useIgnoreFiles": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "python.pythonPath": "python3",
    "files.autoSave": "onFocusChange",
    "window.menuBarVisibility": "toggle",
    "git.autofetch": false,
    "workbench.colorTheme": "WarpOS",
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-s>": false,
        "<C-f>": false,
        "<C-b>": false,
        "<C-n>": false,
        "<C-w>": false,
        "<C-S-e>": false,
        "<C-E>": false
    },
    "workbench.iconTheme": "material-icon-theme",
    "files.associations": {
        "*.plist": "xml",
        "*.spec": "RPMSpec"
    },
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "gitlab.instanceUrl": "https://git.liquidweb.com",
    "material-icon-theme.showUpdateMessage": false,
    "workbench.editor.labelFormat": "medium",
    "git.enableSmartCommit": true,
    "git.enableCommitSigning": true,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": false,
    "window.titleBarStyle": "custom",
    "workbench.editor.showTabs": true,
    "window.newWindowDimensions": "inherit",
    "workbench.settings.editor": "json",
    "workbench.statusBar.visible": true,
    "zenMode.hideActivityBar": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "editor.parameterHints.enabled": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "go.useLanguageServer": true,
    "terminal.integrated.rendererType": "dom",
    "[dockerfile]": {
        "editor.defaultFormatter": "PeterJausovec.vscode-docker"
    },
    "liveshare.featureSet": "insiders"
}